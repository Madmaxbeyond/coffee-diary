<%- include('../partials/header') %>

<h2>All Recipes</h2>
<table id="list">
    <thead>
        <tr>
            <th>Recipe Name</th>
            <th>Brew Method</th>
            <th>Coffee Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% recipes.forEach(function (r) { %>
            <tr>
                <td><%= r.title %></td>
                <td><%= r.brewType %></td>
                <td><%= r.coffeeType %></td>
                <td><a href="/recipes/<%= r._id %>">Brew Details</a></td>
            </tr>
        <% }); %>    
    </tbody>
</table>

<%- include('../partials/footer') %>